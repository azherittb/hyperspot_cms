<div class="profileblock">
    <a href="{{ items.uid }}">{{ items.picture }}</a>
    <h3>
        {% if ((items.first_name|length > 1) or (items.last_name|length > 1)) %}
            {% set name = items.first_name ~ ' ' ~ items.last_name %}
            <a href="{{ items.uid }}">{{ name }}</a>
        {% else %}
            {% set name = 'Enter your name' %}
            <a href="{{ items.uid }}">{{ name }}</a>
        {% endif %}
    </h3>
    <p class="customer">
        {% if items.roles | length > 1 %}
            {{items.roles[1]}}
        {% else %}
            {% set role = 'Customer' %}
            {{role}}
        {% endif %}
    </p>
</div>
<div>
    <ul class="settingspage">
        <a href="#" target="_self"><li class="rest">Restaurant</li></a>
        <a href="#" target="_self"><li class="mybook">My Bookings</li></a>
        <a href="#" target="_self"><li class="myoffer">My Offers</li></a>
        <a href="#" target="_self"><li class="mymesg">My Messages</li></a>
        <a href="#" target="_self"><li class="setting">Settings</li></a>
    </ul>
</div>